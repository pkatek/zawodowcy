<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h2><%= @user.name %> <%= @user.surname %></h2>
	  <h1><%= @user.email %></h1>	
 
    </section>
  </aside>
  <section class="user_info">
	  <br>
    <h2>Zgłoszone awarie</h2>
	
	
	
	
	<table class="table table-striped table-hover">
	  <thead>
	    <tr class="active">
		  <th>Numer</th>
		  <th>Naprawiający</th>
	      <th>Status</th>
		  <th>Tryb</th>
		  <th>Opis</th>
		  <th>Data zgłoszenia</th>
		  <th>Data Aktualizacji</th>
		  <th></th>
	    </tr>
	  </thead>
	  <tbody>
	  <% @accidents.each do |a| %>
	    <tr>
		  <td><%= a.id %></td>
		  <td><%= a.repman_id %></td>
		  <td><%= a.status.name %></td>
		  <td><%= a.mode %></td>
	      <td><%= a.desctiption.truncate(15) %></td>	
		  <td><%= a.created_at.strftime("%d %b. %Y") %></td>
	      <td><%= a.updated_at.strftime("%d %b. %Y") %></td>	
		  <td><%= link_to "Więcej", accident_path(a) %>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
	
	
	
	
	
  </section>

  
  
  
  
  
</div>