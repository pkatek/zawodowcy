<div class="page-header">
  <h2>Jednostki</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
      <th>Nazwa</th>
	  <th>Jednostka</th>
      <th>Aktualizuj</th>
    </tr>
  </thead>
  <tbody>
    <% @units.each do |u| %>
      <tr>
        <td><%= u.name %></td>
		<td><%= u.unit %></td>
			
		<td style="width:80px"> <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-play-icon.png",:width=>30,:height=>30, :border=>0), edit_unit_path(u) %></td>
      </tr>
    <% end %>
  </tbody>
</table>