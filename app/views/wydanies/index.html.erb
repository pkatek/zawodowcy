<% if current_user.admin?%>

<%- model_class = Wydanie -%>
<div class="page-header">
  <h2>Zapotrzebowanie eksploatacji</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr class="active">
	  <th>Numer</th>
      <th>Zgłaszający</th>
	  <th>Wydający</th>
      <th>Towar</th>
	  <th>Ilość</th>
	  <th>Akceptacja</th>
	  <th>Data zgłoszenia</th>
	  <th>Data Aktualizacji</th>
	  <th></th>
    </tr>
  </thead>
  <tbody>
  <% @wydanies.each do |a| %>
    <% if a.accept %>
	<tr class="success">
	  <td><%= a.id %></td>
	  <td><%= a.user.name + " " + a.user.surname %></td>
	  <td><%= a.accept_user %></td>
	  <td><%= a.explo.name %></td>
	  <td><%= a.quantity %></td>
	  <td>Wydane</td>	
	  <td><%= a.created_at.strftime("%d %b. %Y") %></td>
      <td><%= a.updated_at.strftime("%d %b. %Y") %></td>	
	  <% if a.accept %>
	    <td><%= link_to "Więcej", wydany_path(a) %> </td>
	  <% else %>	
		<td><%= link_to "Więcej", wydany_path(a) %>	<%= link_to "Wydaj", edit_wydany_path(a) %></td>
	  <% end %>
    </tr>
  <% else %>
	  <tr class="warning">
	    <td><%= a.id %></td>
	    <td><%= a.user.name + " " + a.user.surname %></td>
	    <td><%= a.accept_user %></td>
	    <td><%= a.explo.name %></td>
	    <td><%= a.quantity %></td>
	    <td>Oczekuje</td>	
	    <td><%= a.created_at.strftime("%d %b. %Y") %></td>
	    <td><%= a.updated_at.strftime("%d %b. %Y") %></td>	
		<% if a.accept %>
	    <td><%= link_to "Więcej", wydany_path(a) %> </td>
		<% else %>	
		<td><%= link_to "Więcej", wydany_path(a) %>	<%= link_to "Wydaj", edit_wydany_path(a) %></td>
		<% end %>
		
		
	  </tr> 
	<% end %>
  <% end %>
  </tbody>
</table>


<% else %>
  redirect_to root_path
<% end %>