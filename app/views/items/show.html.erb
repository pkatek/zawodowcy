
<div class="page-header">
  <h1>Item</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nazwa</strong></dt>
  <dd><%= @item.name %></dd>
  <dt><strong>Sn</strong></dt>
  <dd><%= @item.sn %></dd>
  <dt><strong>Ilość</strong></dt>
  <dd><%= @item.quantity %></dd>
  <dt><strong>Jednostka</strong></dt>
  <dd><%= @item.unit.name %></dd>
  <dt><strong>Lokalizacja</strong></dt>
  <dd><%= @item.location.name %></dd>
  <dt><strong>Uwagi</strong></dt>
  <dd><%= @item.description %></dd>
  <dt><strong>Kategoria</strong></dt>
  <dd><%= @item.category.name %></dd>
  <dt><strong>Zdjęcie</strong></dt>
  <dd><%= image_tag @item.avatar %></dd>
 <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-fast-backward-icon.png",:width=>50,:height=>50, :border=>0), items_path %>

<br>
  <strong>Historia</strong>
  <table class="table table-striped table-hover">
    <thead>
      <tr class="active">
		<th>ID</th>
        <th>Admin</th>
        <th>Petent</th>
		<th>Lokalizacja</th>
		<th>Status</th>
		<th>Data wydania</th>
		<th>Data aktualizacji</th>
      </tr>
    </thead>
   <tbody>
    <% @wzs.each do |wz| %>
      <tr>
		<td><%= wz.id %></td>
		<td><%= wz.admin_user.name + " " + wz.admin_user.surname %></td>
		<td><%= wz.user.name %></td>
		<td><%= wz.location.name %></td>
		<td><%= wz.status.name %></td>
		<td><%= wz.created_at.strftime("%d %b. %Y") %></td>
		<td><%= wz.created_at.strftime("%d %b. %Y") %></td>
	  </tr>
    <% end %>
  </tbody>
</table>


