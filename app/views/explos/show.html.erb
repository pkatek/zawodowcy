
<div class="page-header">
  <h1>Eksploatacja</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nazwa</strong></dt>
  <dd><%= @explo.name %></dd>
  <dt><strong>Sn</strong></dt>
  <dd><%= @explo.sn %></dd>
  <dt><strong>Regał</strong></dt>
  <dd><%= @explo.regal %></dd>
  <dt><strong>Półka</strong></dt>
  <dd><%= @explo.polka %></dd>
  <dt><strong>Ilość</strong></dt>
  <dd><%= @explo.quantity %></dd>
  <dt><strong>Uwagi</strong></dt>
  <dd><%= @explo.description %></dd>
  <dt><strong>Kategoria</strong></dt>
  <dd><%= @explo.unit.name %></dd>
 <%= link_to image_tag("http://icons.iconarchive.com/icons/double-j-design/super-mono-3d/96/button-round-fast-backward-icon.png",:width=>50,:height=>50, :border=>0), explos_path %>

  <br>

<center>





    <div class="row">
      <div class="col-xs-8 col-sm-6">
		  <strong>Wydane: </strong>
		  <%= Wydanie.where(explo: @explo.id).sum(:quantity)%>
		  <table class="table table-striped table-hover">
		    <thead>
		      <tr class="active">
				<th>ID</th>
		        <th>Ilość</th>
		        <th>Kto</th>
				<th>Data wydania</th>
		      </tr>
		    </thead>
		   <tbody>
		    <% @wydanies.each do |wydanie| %>
		      <tr>
				<td><%= wydanie.id %></td>
		        <td>-<%= wydanie.quantity %></td>
		        <td><%= wydanie.user.name %></td>
				<td><%= wydanie.created_at.strftime("%d %b. %Y") %></td>
				      </tr>
		    <% end %>
		  </tbody>
		</table>
      </div>
      <div class="col-xs-4 col-sm-6">
	     <strong>Przyjęte: </strong>
		 <%= Adoption.where(explo: @explo.id).sum(:quantity)%>
	     <table class="table table-striped table-hover">
	       <thead>
	         <tr class="active">
	   		<th>ID</th>
	           <th>Ilość</th>
	           <th>Kto</th>
	   		<th>Data wydania</th>
	         </tr>
	       </thead>
	      <tbody>
	       <% @adoptions.each do |adoption| %>
	         <tr>
	   		<td><%= adoption.id %></td>
	   		<td><%= adoption.quantity %></td>
	   		<td></td>
	   		<td><%= adoption.created_at.strftime("%d %b. %Y") %></td>

	   		      </tr>
	       <% end %>
	     </tbody>
	   </table>
      </div>
    </div>

</center>